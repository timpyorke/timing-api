# Application Configuration
PORT=8000
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database"

# LINE Messaging API Configuration
LINE_CHANNEL_ACCESS_TOKEN="your-line-channel-access-token"
LINE_CHANNEL_SECRET="your-line-channel-secret"

# JWT Configuration
JWT_SECRET="your-secure-jwt-secret-key"

# Image proxy caching (optional)
# TTL for cached images in milliseconds (default: 3600000 = 1 hour)
IMAGE_PROXY_TTL_MS=3600000
# Max image size the proxy will cache in bytes (default: 5242880 = 5MB)
IMAGE_PROXY_MAX_BYTES=5242880
# Comma-separated hostnames allowed for proxying. Leave empty to allow all (not recommended for production).
# Example: images.example.com,cdn.example.org
IMAGE_PROXY_ALLOWLIST=
IMAGE_PROXY_REWRITE=false

# If your frontend is on a different domain, set the public base URL
# of this API so rewritten image URLs are absolute and point here.
# Example: https://timing-api.example.com
PUBLIC_BASE_URL=https://timing-app.vercel.app
